#include <iostream>
#include <cstdlib>

void executeCommand(const std::string& description, const std::string& command) {
    std::cout << "\n" << description << ":\n";
    system(command.c_str());
}

int main() {
    // Execute "wc" command
    executeCommand("Counting words using 'wc'", "echo 'Hello World' | wc");

    // Execute "cal" command
    executeCommand("Displaying calendar using 'cal'", "cal");

    // Execute "who" command
    executeCommand("Showing logged-in users using 'who'", "who");

    // Execute "date" command
    executeCommand("Showing current date using 'date'", "date");

    // Execute "pwd" command
    executeCommand("Displaying current directory using 'pwd'", "pwd");

    return 0;
}
